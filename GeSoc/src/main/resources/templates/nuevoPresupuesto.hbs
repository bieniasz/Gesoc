    <div class="footer">GESOC - Grupo 09</div>
</body>

<!-- ================= MODAL AGREGAR DETALLE ================== -->
<div class="modalAgregarDetalle modal" id="modalAgregarDetalle">
    <div class="modalContent">
        <h3>Agregar nuevo detalle</h3>
        <form>
            <input type="text" name="descripcionItem" id="descripcionItem" placeholder="Descripcion">
            <input type="text" name="cantidadItem" id="cantidadItem" placeholder="Cantidad">
            <input type="text" name="valorItem" id="valorItem" placeholder="Valor total">
        </form>
        <br>
        <div class="">
            <button type="button" name="button" class="btn-verde" onclick="guardarNuevoItem()">Agregar</button>
            <button type="button" name="button" class="btn-cancelar" onclick="cerrarModal()">Cerrar</button>
        </div>
    </div>
</div>



</body>
</html>
