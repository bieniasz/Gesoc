<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:310px;margin-top:43px;">

  <!-- Header -->
  <header class="titulo" style="padding-top:22px">
      <b><i class="fa fa-bank fa-fw"></i>{{#if egreso}} Presupuesto - Id {{egreso.id}} {{else}} Nuevo Presupuesto {{/if}}</b>
  </header>

  
<!-- !DOCUMENTO COMERCIAL! -->
        <h3 for="documentoComercial">Documento Comercial</h3>
        <label for="documentoComercialTipo">Tipo</label>
        <select id="documentoComercialTipo" name="documentoComercialTipo" class="input-formulario" >
            <option value="Fisico">Fisico</option>
            <option value="Digital">Digital</option>
        </select>
        <br><br>
        <label for="documentoComercialNumero">Numero</label>
        <input id="documentoComercialNumero" name="documentoComercialNumero" type="number" class="input-formulario" {{#if egreso}} value="{{egreso.documentoComercial.numeroDocumentoComercial}}" {{/if}}>
        <br><br>
        <label for="documentoComercialClase">Clase de documento</label>
        <input id="documentoComercialClase" name="documentoComercialClase" type="text" class="input-formulario" {{#if egreso}} value="{{egreso.documentoComercial.tipoDocumentoComercial.descripcion}}" {{/if}}>
        <br><br>
        <label for="documentoComercialAdjunto">Adjunto</label>
        <input id="documentoComercialAdjunto" name="documentoComercialAdjunto" type="file" onsubmit="serializarArchivo()" class="input-formulario">
        <br><br>
        
<!-- !EGRESO ASOCIADO! -->
        <label for="Egreso">Egreso Asociado</label>
        <input id="egreso" name="egreso" type="number" class="input-formulario" {{#if egreso}} value="{{egreso.detalle}}" {{/if}}>
        <a name="searchEgreso" class=" btn btn-search" onclick="mostrarBuscarEgreso()"><i class="fas fa-search"></i></a>
        <input type="hidden" id="egresoId" name="egresoId" {{#if egreso}} value="{{egreso.id}}" {{/if}}>

        <div class="dropdown">
            <div id="buscarEgreso" class="dropdown-content">
                <input type="text" placeholder="Search.." id="inputBuscarEgreso" onkeyup="filterFunction('buscarEgreso','inputBuscarEgreso')">
                {{#each egreso}}
                    <a onClick="llenarEgreso('{{Detalle}}', '{{id}}')">{{Detalle}}</a>
                {{/each}}
            </div>
        </div>
        <br><br>
<!-- !ES EL ELEGIDO! -->
  		<br><br>
        <label><input type="checkbox" id="prespuestoElegidoCheck" value="prespuestoElegidoCheck"> Es presupuesto elegido</label>
        <br><br>
<!-- !CATEGORIAS! -->
        <h3 style="margin-bottom: 5px;margin-left: 10px">Categorias
            <a name="searchCategoria" class=" btn btn-search" onclick="mostrarBuscarCategorias()"><i class="fas fa-search"></i></a>
            <input type="hidden" id="cantidadDeCategoriasNuevas" name="cantidadDeCategorias">
        </h3>

        <div class="dropdown">
            <div id="buscarCategoria" class="dropdown-content">
                <input type="text" placeholder="Search.." id="inputBuscarCategoria" onkeyup="filterFunction('buscarCategoria','inputBuscarCategoria')">
                {{#each categorias}}
                    <a onClick="agregarCategoria('{{descripcion}}', '{{id}}')">{{descripcion}}</a>
                {{/each}}
            </div>
        </div>

        <div id="seccionCategorias">
            {{#if egreso}}
                {{#each egreso.categoriasAsociadas}}
                    <div>
                        <input id="categoria{{id}}" name="categoria{{id}}" class="w3-tag w3-padding w3-small w3-center w3-yellow" type="text" readonly value="{{descripcion}}">
                        <a class="btn btn-search" id="eliminarCategoria{{id}}" onclick="eliminarCategoria({{id}})"><i class="fas fa-close"></i></a>
                    </div>
                {{/each}}
            {{/if}}
        </div>
        <br><br>

<!-- !DETALLE PRESUPUESTO! -->
      <h3 style="margin-bottom: 5px;margin-left: 10px">Detalle Presupuesto
          <button type="button" name="buttonAgregarItem" class="btn-border-blue fuente" onclick="agregarItem()"><i class="fa fa-plus-circle" style="margin-bottom:25px;"></i></button></h3>
      <input type="hidden" id="cantidadDetalles" name="cantidadDetalles">

      <table class="tabla" id="detalleEgresos" name="detalleEgresos">
        <thead>
          <th><i class=""></i> Id </th>
          <th><i class=""></i> Item </th>
          <th><i class=""></i> Cantidad </th>
          <th><i class=""></i> Valor Total </th>
          <th><i class="fas fa-tools"></i> Acciones</th>
        </thead>
        <tbody>
        {{#if egreso}}
            {{#each egreso.detalle}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{item.descripcion}}</td>
                    <td>{{cantidad}}</td>
                    <td>{{valorTotal}}</td>
                    <td>
                     <!-- <a href="" name="button" style="margin:0px;" class="btn btn-border btn-border-blue" ><i class="far fa-eye"></i></a>-->
                     <!--  <a href="" name="button" class=" btn btn-edit"><i class="fas fa-edit"></i></a>-->
                    <!--  <button type="button" name="buttonAgregarItem" class="btn btn-edit" onclick="agregarItem()"><i class="fas fa-edit"></i></button>
                      <button type="button" name="button" class="btn" onclick="confirmarEliminacion('{{id}}')"><i class="fas fa-trash"></i></button> -->
                    </td>
                  </tr>
            {{/each}}
        {{/if}}
        </table>
        <br>

      <!-- !FIN Detalle del Egreso! -->
      <br>
      <div align="left" width="90%">
      <input class="btn-guardar" type="submit" value="Guardar">
      </div>
      <br>
    </form>
  <br><br><br>

    <!-- Footer -->

<head>
 <style type ="text/css" >
   .footer{
       position: fixed;
       text-align: center;
       bottom: 0px;
       width: 100%;
   }
</style>
