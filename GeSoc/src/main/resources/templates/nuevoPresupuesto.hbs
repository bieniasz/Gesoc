<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:310px;margin-top:43px;">

  <!-- Header -->
  <header class="titulo" style="padding-top:22px">
        {{#if presupuesto}}  <a href="/presupuestos?egresoId={{presupuesto.egreso.id}}" class="btn-border-blue fuente"><i class="fa fa-toggle-left"></i> Atrás</a>{{/if}}
        <b><i class="fa fa-bank fa-fw"></i>{{#if presupuesto}} Presupuesto - Id {{presupuesto.id}} {{else}} Nuevo Presupuesto {{/if}}</b>
  </header>
  
 <form class=""  action="/presupuesto" method="post"> 
 
<!-- !FECHA! -->
		
		<label for="fecha">Fecha</label>
        <input id="fecha" name="fecha" type="date"  class="input-formulario" required {{#if presupuesto}} value="{{presupuesto.fecha}}" {{/if}}>
        <br><br>

  
       
<!-- !EGRESO ASOCIADO! -->
        <label for="Egreso">Egreso Asociado</label>
        <input id="egreso" name="egreso" type="text" class="input-formulario"  readonly  {{#if presupuesto}} value="{{presupuesto.egreso.id}}" {{else}} value="{{egresoId}}"  {{/if}}>   
        
        
        <br><br>
<!-- !ES EL ELEGIDO! -->
  		<br><br>
        <label><input type="checkbox" id="prespuestoElegidoCheck"  name="prespuestoElegidoCheck" {{#if presupuesto}} onload="presupuestoCheck('{{presupuesto.esElElegido}}')"  {{/if}}> Es presupuesto elegido</label>
        <br><br>
<!-- !CATEGORIAS! -->
        <h3 style="margin-bottom: 5px;margin-left: 10px">Categorias
            <a name="searchCategoria" class=" btn btn-search" onclick="mostrarBuscarCategorias()"><i class="fas fa-search"></i></a>
            <input type="hidden" id="cantidadDeCategoriasNuevas" name="cantidadDeCategoriasNuevas" value="0">
        	<input type="hidden" id="categoriasExistentesEliminadas" name="categoriasExistentesEliminadas">
        </h3>

        <div class="dropdown">
            <div id="buscarCategoria" class="dropdown-content">
                <input type="text" placeholder="Search.." id="inputBuscarCategoria" onkeyup="filterFunction('buscarCategoria','inputBuscarCategoria')">
                {{#each categorias}}
                    <a onClick="agregarCategoria('{{descripcion}}', '{{id}}')">{{descripcion}}</a>
                {{/each}}
            </div>
        </div>

        <div id="seccionCategorias">
            {{#if presupuesto}}
                {{#each presupuesto.categoriasAsociadas}}
                    <div>
                        <input id="categoria{{id}}" name="categoria{{id}}" class="w3-tag w3-padding w3-small w3-center w3-yellow" type="text" readonly value="{{descripcion}}">
                        <a class="btn btn-search" id="eliminarCategoria{{id}}" onclick="eliminarCategoria({{id}})"><i class="fas fa-close"></i></a>
                    </div>
                {{/each}}
            {{/if}}
        </div>
        <br><br>

<!-- !DETALLE EGRESO! -->
      <h3 style="margin-bottom: 5px;margin-left: 10px">Detalle Presupuesto
          <button type="button" name="buttonAgregarItem" class="btn-border-blue fuente" onclick="agregarItem()"><i class="fa fa-plus-circle" style="margin-bottom:25px;"></i></button></h3>
      <input type="hidden" id="cantidadDetalles" name="cantidadDetalles">
        {{#if presupuesto}}
            <label>Valor Total: {{presupuesto.valorTotal}}</label>
            <br><br>
        {{/if}}

      <table class="tabla" id="detalleEgresos" name="detalleEgresos">
        <thead>
          <th><i class=""></i> Id </th>
          <th><i class=""></i> Item </th>
          <th><i class=""></i> Cantidad </th>
          <th><i class=""></i> Valor Total </th>
          <th><i class="fas fa-tools"></i> Acciones</th>
        </thead>
        <tbody>
        {{#if presupuesto}}
            {{#each presupuesto.detalle}}
                <tr id="rowItemExistente{{id}}" name="rowItemExistente{{id}}">
                    <td><input id="valorItemExistenteId{{id}}" name="valorItemExistenteId{{id}}" type="number" readonly value="{{id}}"></td>
                    <td><input id="valorItemExistenteDescripcion{{id}}" name="valorItemExistenteDescripcion{{id}}" type="text" value="{{item.descripcion}}"></td>
                    <td><input id="valorItemExistenteCantidad{{id}}" name="valorItemExistenteCantidad{{id}}" type="number" value="{{cantidad}}"></td>
                    <td><input id="valorItemExistenteValor{{id}}" name="valorItemExistenteValor{{id}}" type="number" value="{{valorTotal}}"></td>
                    <td>
                        <a class="btn btn-border btn-border-blue" id="botonBorrarItem{{id}}" onclick="borrarItem({{id}})"><i class="fas fa-close"></i></a>
                    </td>
                  </tr>
            {{/each}}
        {{/if}}
        </table>
        <br>

      <!-- !FIN Detalle del Egreso! -->
      <br>
      <div align="left" width="90%">
      <input class="btn-guardar" type="submit" value="Guardar">
      </div>
      <br>
    </form>
  <br><br><br>

    <!-- Footer -->

