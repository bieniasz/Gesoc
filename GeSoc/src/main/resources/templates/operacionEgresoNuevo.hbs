<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:310px;margin-top:43px;">

  <!-- Header -->
  <header class="titulo" style="padding-top:22px">
      <b><i class="fa fa-bank fa-fw"></i>{{#if egreso}} Operacion de Egreso - Id {{egreso.id}} {{else}} Nueva Operacion de Egreso {{/if}}</b>
  </header>

   <!-- Formulario -->
    <form class="" {{#if egreso}} action="/egresoEditar?egresoId={{egreso.id}}" {{else}} action="/egreso" {{/if}} method="post">

        <label for="fecha">Fecha</label>
        <input id="fecha" name="fecha" type="date"  class="input-formulario" {{#if egreso}} value="{{egreso.fecha}}" {{/if}} required>
        <br><br>
        <label for="cantidadEsperadaPresupuestos">Cant. Presupuestos Req.</label>
        <input id="cantidadEsperadaPresupuestos" name="cantidadEsperadaPresupuestos" type="number" class="input-formulario" {{#if egreso}} value="{{egreso.cantidadEsperadaPresupuestos}}" {{/if}} required>
        <br><br>

<!-- !PROVEEDOR! -->
        <label for="Proveedor">Proveedor</label>
        <input id="proveedor" readonly name="proveedor" type="text" class="input-formulario" {{#if egreso}} value="{{egreso.proveedor.nombreApellido_RazonSocial}}" {{/if}} required>
        <a name="searchProveedor" class=" btn btn-search" onclick="mostrarBuscarProveedor()"><i class="fas fa-search"></i></a>
        <input type="hidden" id="proveedorId" name="proveedorId" {{#if egreso}} value="{{egreso.proveedor.id}}" {{/if}}>

        <div class="dropdown">
            <div id="buscarProveedor" class="dropdown-content">
                <input type="text" placeholder="Search.." id="inputBuscarProveedor" onkeyup="filterFunction('buscarProveedor','inputBuscarProveedor')">
                {{#each provedoores}}
                    <a onClick="llenarProveedor('{{nombreApellido_RazonSocial}}', '{{id}}')">{{nombreApellido_RazonSocial}}</a>
                {{/each}}
            </div>
        </div>
        <br><br>

<!-- !MEDIO DE PAGO! -->
        <label>Descripcion del pago</label>
        <input id="descripcionDelPago" readonly name="descripcionDelPago" type="text" class="input-formulario" {{#if egreso}} value="{{egreso.medioDePago.descMercadoPago}}" {{/if}} required>

            <a name="searchMedioDePago" class=" btn btn-search" onclick="mostrarBuscarMedioDePago()"><i class="fas fa-search"></i></a>
                <div class="dropdown">
                    <div id="buscarMedioDePago" class="dropdown-content">
                        <input type="text" placeholder="Search.." id="inputBuscarMedioDePago" onkeyup="filterFunction('buscarMedioDePago','inputBuscarMedioDePago')">
                        {{#each mediosDePago}}
                            <a onClick="llenarMedioDePago('{{idMercadoPago}}', '{{descMercadoPago}}', '{{tipoMercadoPago}}', '{{id}}')">{{descMercadoPago}}</a>
                        {{/each}}
                    </div>
                </div>

        <br><br>
        <label>Tipo de pago</label>
        <input id="tipoDePago" name="tipoDePago" type="text" class="input-formulario" {{#if egreso}} value="{{egreso.medioDePago.tipoMercadoPago}}" {{/if}} readonly>
        <br><br>
        <label>Numero identificador del Medio de Pago</label>
        <input id="numeroIdentificadorDelMedio" name="numeroIdentificadorDelMedio" type="number" class="input-formulario" {{#if egreso}} value="{{egreso.numeroIdentificadorMedioPago}}" {{/if}} required>
        <br><br>
        <input type="hidden" id="medioDePagoIdDB" name="medioDePagoIdDB" {{#if egreso}} value="{{egreso.medioDePago.id}}" {{/if}}>

<!-- !CATEGORIAS! -->
        <h3 style="margin-bottom: 5px;margin-left: 10px">Categorias
            <a name="searchCategoria" class=" btn btn-search" onclick="mostrarBuscarCategorias()"><i class="fas fa-search"></i></a>
        </h3>
        <input type="hidden" id="cantidadDeCategoriasNuevas" name="cantidadDeCategoriasNuevas" value="0">
        <input type="hidden" id="categoriasExistentesEliminadas" name="categoriasExistentesEliminadas">

        <div class="dropdown">
            <div id="buscarCategoria" class="dropdown-content">
                <input type="text" placeholder="Search.." id="inputBuscarCategoria" onkeyup="filterFunction('buscarCategoria','inputBuscarCategoria')">
                {{#each categorias}}
                    <a onClick="agregarCategoria('{{descripcion}}', '{{id}}')">{{descripcion}}</a>
                {{/each}}
            </div>
        </div>

        <div id="seccionCategorias">
            {{#if egreso}}
                {{#each egreso.categoriasAsociadas}}
                    <div>
                        <input id="categoria{{id}}" name="categoria{{id}}" class="w3-tag w3-padding w3-small w3-center w3-yellow" type="text" readonly value="{{descripcion}}">
                        <a class="btn btn-search" id="eliminarCategoria{{id}}" onclick="eliminarCategoria({{id}})"><i class="fas fa-close"></i></a>
                    </div>
                {{/each}}
            {{/if}}
        </div>
        <br><br>

<!-- !DETALLE EGRESO! -->
      <h3 style="margin-bottom: 5px;margin-left: 10px">Detalle Egreso
          <button type="button" name="buttonAgregarItem" class="btn-border-blue fuente" onclick="agregarItem()"><i class="fa fa-plus-circle" style="margin-bottom:25px;"></i></button></h3>
      <input type="hidden" id="cantidadDetalles" name="cantidadDetalles">
        {{#if egreso}}
            <label>Valor Total: {{egreso.valorTotal}}</label>
            <br><br>
        {{/if}}

      <table class="tabla" id="detalleEgresos" name="detalleEgresos">
        <thead>
          <th><i class=""></i> Id </th>
          <th><i class=""></i> Item </th>
          <th><i class=""></i> Cantidad </th>
          <th><i class=""></i> Valor Total </th>
          <th><i class="fas fa-tools"></i> Acciones</th>
        </thead>
        <tbody>
        {{#if egreso}}
            {{#each egreso.detalle}}
                <tr id="rowItemExistente{{id}}" name="rowItemExistente{{id}}">
                    <td><input id="valorItemExistenteId{{id}}" name="valorItemExistenteId{{id}}" type="number" readonly value="{{id}}"></td>
                    <td><input id="valorItemExistenteDescripcion{{id}}" name="valorItemExistenteDescripcion{{id}}" type="text" value="{{item.descripcion}}"></td>
                    <td><input id="valorItemExistenteCantidad{{id}}" name="valorItemExistenteCantidad{{id}}" type="number" value="{{cantidad}}"></td>
                    <td><input id="valorItemExistenteValor{{id}}" name="valorItemExistenteValor{{id}}" type="number" value="{{valorTotal}}"></td>
                    <td>
                        <a class="btn btn-border btn-border-blue" id="botonBorrarItem{{id}}" onclick="borrarItem({{id}})"><i class="fas fa-close"></i></a>
                    </td>
                  </tr>
            {{/each}}
        {{/if}}
        </table>
        <br>

      <!-- !FIN Detalle del Egreso! -->
      <br>
      <div align="left" width="90%">
      <input class="btn-guardar" type="submit" value="Guardar">
      </div>
      <br>
    </form>
  <br><br><br>

    <!-- Footer -->

<head>
 <style type ="text/css" >
   .footer{
       position: fixed;
       text-align: center;
       bottom: 0px;
       width: 100%;
   }
</style>
