<!-- !PROVEEDOR! -->
        <label for="Proveedor">Proveedor</label>
        <input id="proveedor" name="proveedor" type="text" class="input-formulario">
        <a name="searchProveedor" class=" btn btn-search" onclick="mostrarBuscarProveedor()"><i class="fas fa-search"></i></a>
        <input type="hidden" id="proveedorId" name="proveedorId">

        <div class="dropdown">
            <div id="buscarProveedor" class="dropdown-content">
                <input type="text" placeholder="Search.." id="inputBuscarProveedor" onkeyup="filterFunction('buscarProveedor','inputBuscarProveedor')">
                {{#each provedoores}}
                    <a onClick="llenarProveedor('{{nombreApellido_RazonSocial}}', '{{id}}')">{{nombreApellido_RazonSocial}}</a>
                {{/each}}
            </div>
        </div>

        <br><br>
<!-- !MEDIO DE PAGO! -->
        <h3 for="documentoComercial">Medio de pago</h3>
        <label>Id de pago</label>
        <input id="medioDePagoId" name="medioDePagoId" type="number" class="input-formulario">
        <br><br>
        <label>Descripcion del pago</label>
        <input id="descripcionDelPago" name="descripcionDelPago" type="text" class="input-formulario">
        <br><br>
        <label>Tipo de pago</label>
        <input id="tipoDePago" name="tipoDePago" type="text" class="input-formulario">
        <br><br>
<!-- !DOCUMENTO COMERCIAL! -->
        <h3 for="documentoComercial">Documento Comercial</h3>
        <label for="documentoComercialTipo">Tipo</label>
        <select id="documentoComercialTipo" name="documentoComercialTipo" class="input-formulario" >
            <option value="Fisico">Fisico</option>
            <option value="Digital">Digital</option>
        </select>
        <br><br>
        <label for="documentoComercialNumero">Numero</label>
        <input id="documentoComercialNumero" name="documentoComercialNumero" type="number" class="input-formulario">
        <br><br>
        <label for="documentoComercialClase">Clase de documento</label>
        <input id="documentoComercialClase" name="documentoComercialClase" type="text" class="input-formulario">
        <br><br>
        <label for="documentoComercialAdjunto">Adjunto</label>
        <input id="documentoComercialAdjunto" name="documentoComercialAdjunto" type="file" onsubmit="serializarArchivo()" class="input-formulario">
        <br><br>


<!-- !CATEGORIAS! -->
        <h3 style="margin-bottom: 5px;margin-left: 10px">Categorias
