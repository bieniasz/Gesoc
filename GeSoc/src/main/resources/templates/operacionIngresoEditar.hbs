<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:310px;margin-top:43px;">

  <!-- Header -->
  <header class="titulo" style="padding-top:22px">
      <b><i class="fa fa-bank fa-fw"></i>{{#if ingreso}} Editar Operacion de Ingreso - Id {{ingresoId}} {{else}} Editar Operacion de Ingreso {{/if}}</b>
  </header>

   <!-- Formulario -->
   <form class="" {{#if ingreso}} action="ingresoEditar?ingresoId={{ingresoId}}" {{else}} action="ingresoEditar" {{/if}} method="post">
        <!-- <input id="organizacion" name="organizacion" type="number" class="input-formulario">
		<br><br> -->
        <label for="fecha">Fecha</label>
        <input id="fecha" name="fecha" type="date"  class="input-formulario" {{#if ingreso}} value="{{ingreso.fecha}}" {{/if}}>
        <br><br>
        <label for="descripcion">Descripción</label>
        <input id="descripcion" name="descripcion" class="input-formulario" {{#if ingreso}} value="{{ingreso.descripcion}}" {{/if}}>
        <br><br>
        <label for="monto">Monto</label>
        <input id="monto" name="monto" type="number" step="0.01" class="input-formulario" {{#if ingreso}} value="{{ingreso.monto}}" {{/if}}>
        <br><br>

      <br>
      <div align="left" width="90%">
      <input class="btn-guardar" type="submit" value="Guardar">
      </div>
      <br>
    </form>
  <br><br><br>

